<?xml version="1.0"?>
<ruleset>
	<!-- Use HM Coding Standards -->
	<rule ref="vendor/humanmade/coding-standards">
		<exclude name="Generic.Formatting.MultipleStatementAlignment" />
		<exclude name="HM.Files.NamespaceDirectoryName.NameMismatch" />
	</rule>

	<!-- Add one extra word delimiter. -->
	<rule ref="WordPress.NamingConventions.ValidHookName">
		<properties>
			<property name="additionalWordDelimiters" value="/-."/>
		</properties>
	</rule>

	<!-- Exclude config directory from some rules -->
	<rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
		<exclude-pattern>*/.config/*</exclude-pattern>
	</rule>

	<!-- Exclude non-project directories -->
	<exclude-pattern type="relative">^.content/uploads/*</exclude-pattern>
	<exclude-pattern type="relative">^.content/test-uploads/*</exclude-pattern>
	<exclude-pattern type="relative">^.tests/php/includes/*</exclude-pattern>
	<exclude-pattern type="relative">^chassis/*</exclude-pattern>

	<!-- Exclude third party code -->
	<exclude-pattern type="relative">^content/mu-plugins/vendor/*</exclude-pattern>
	<exclude-pattern type="relative">^content/plugins/*</exclude-pattern>
	<exclude-pattern type="relative">^content/themes/*</exclude-pattern>
	<exclude-pattern type="relative">^vendor/*</exclude-pattern>
	<exclude-pattern type="relative">^wordpress/*</exclude-pattern>
	<exclude-pattern type="relative">^wp-config.php</exclude-pattern>
	<exclude-pattern type="relative">^index.php</exclude-pattern>

	<!-- Exclude build directories -->
	<exclude-pattern type="relative">^content/themes/peter-wilson-2017/assets/dist/*</exclude-pattern>

	<!-- Show sniff codes in all reports -->
	<arg value="s"/>
</ruleset>
